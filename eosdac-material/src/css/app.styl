// app global css
.gradient-bg-primary{
  background-image linear-gradient(to right, $primary, $p-light);
}
.blur-details{
  background rgba(255, 255, 255, 0.1);
}
.center_background_image{
    display: inline-block;
    border-radius: 50%;
    background-position: center center;
    background-size: cover;
}
// font labels and forms
a {
  text-decoration: none;
  color: #7c41ba;
  transition: all .2s ease-in-out;
}
a:hover{
  color: white;
}

.a2{
  text-decoration: none;
  color: white;
  transition: all .2s ease-in-out;
}
.a2:hover{
  color: #7c41ba;
}

.q-item-label{
font-size:14px;
}

.q-field-label{
font-size:14px;
}

.q-input-target{
font-size:14px;
}

.q-option-label{
font-size:14px!important;
}

.q-item-side{
font-size:14px;
}



// font Headlines

.regular {
  font-weight: 400;
}


.drawer-margin {
  margin-left:300px;
}

.text-dark2 {
  color: #1E2128;
}

.bg-dark2 {
  background: #1E2128;
}

.text-dimwhite{
  color: rgba(255,255,255,0.6);
}

.bg-dimwhite {
  color: rgba(255,255,255,0.6);
}

.bg-p-light {
  color: #7c41ba;
}

.text-p-light {
  color: #7c41ba;
}

.p-light {
  color: #7c41ba;
}

.large-text-dark2 {
  color: rgba(255, 255, 255, .41);
}

.small-text-dark2 {
  color: rgba(255, 255, 255, .46);
}

.large-text-dark {
  color: rgba(255, 255, 255, .34);
}

.small-text-dark {
  color: rgba(255, 255, 255, .48);
}

.bg-dark2 {
  background: #1E2128;
}

.router-link-active {
  background: var(--q-color-primary) !important;
}

.markdown-body {
        box-sizing: border-box;
        min-width: 200px;
        max-width: 980px;
        padding: 0px 45px 45px 45px;
        background: white;
        font-size: 14px!important;
    }

    @media (max-width: 767px) {
        .markdown-body {
            padding: 15px;
        }
    }



.q-tabs-position-top .q-tabs-bar {
    top: 0;
    border-top-width: 1px;
}

/*pagination style overwrite*/
.q-pagination .q-btn{
  margin-left:3px;
  height:32px!important;
  width:32px!important;
  border-radius:50% !important;

}
.q-pagination .q-btn div{
  color: white;
}

// fade transition
.fade-enter-active {
  transition: opacity 0.4s ease-in-out;
}

.fade-enter-to {
  opacity: 1;
}

.fade-enter {
  opacity: 0;
}

.markdown-body  li > p {
  margin:0 !important;
}

